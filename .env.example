# FreeScout Configuration
FREESCOUT_BASE_URL=https://your-freescout-instance.com
FREESCOUT_API_KEY=your_freescout_api_key_here

# LLM Provider Configuration
# Separate providers for embeddings and chat (recommended for flexibility)
EMBEDDINGS_PROVIDER=ollama
CHAT_PROVIDER=openai

# Legacy single provider setting (for backward compatibility)
# If EMBEDDINGS_PROVIDER and CHAT_PROVIDER are not set, this will be used for both
# LLM_PROVIDER=ollama

# Ollama Configuration (when EMBEDDINGS_PROVIDER=ollama or CHAT_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# OpenAI-compatible API Configuration (when EMBEDDINGS_PROVIDER=openai or CHAT_PROVIDER=openai)
# Example for university's aqueduct.ai.datalab.tuwien.ac.at
OPENAI_BASE_URL=https://aqueduct.ai.datalab.tuwien.ac.at/v1
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=mistral-small-24b
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# User ID for the LLM Bot in FreeScout
# This is the ID of the user account the note will be posted under.
# You might want to create a dedicated "Bot" user in FreeScout for this.
LLM_USER_ID=120

# Vector Database Configuration
# Path where the SQLite vector database will be stored
VECTOR_DB_PATH=vector_db.sqlite